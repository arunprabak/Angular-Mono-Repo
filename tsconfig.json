{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/core-data": [
        "libs/core-data/src/index.ts"
      ],
      "@app/ui": [
        "libs/ui/src/index.ts"
      ],
      "@app/login": [
        "libs/login/src/index.ts"
      ],
      "@app/dashboard": [
        "libs/dashboard/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ],
  "angularCompilerOptions": {
    "enableIvy": true
  }
}